extends layout

block content
    h1= title

    ul
        each val in bookinstance_list
            li
                a(href=val.url) #{val.book.title} : #{val.imprint} -
                if val.status=='Available'
                    span.text-success div val.status
                else if val.status=='Maintenance'
                    span.text-danger div val.status
                else
                    span.text-warning #{val.status}
                if val.status!='Available'
                    span (Due: #{val.due_back} )


        else
            li There are no copies of this book currently available in this library.